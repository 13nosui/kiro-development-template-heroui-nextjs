{
  "name": "ai-development-template",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "description": "Template for AI-powered service development with HeroUI and Next.js",
  "keywords": [
    "next.js",
    "react",
    "typescript",
    "heroui",
    "tailwindcss",
    "firebase",
    "ai",
    "template"
  ],
  "author": "Development Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/ai-development-template.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/ai-development-template/issues"
  },
  "homepage": "https://github.com/your-org/ai-development-template#readme",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint \"src/**/*.{ts,tsx,js,jsx}\" \"*.{ts,tsx,js,jsx}\" --fix",
    "lint:check": "eslint \"src/**/*.{ts,tsx,js,jsx}\" \"*.{ts,tsx,js,jsx}\"",
    "type-check": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build --quiet",
    "tw": "tailwindcss",
    "security:audit": "npm audit --audit-level=moderate",
    "security:audit:strict": "npm audit --audit-level=high",
    "security:fix": "npm audit fix",
    "security:check": "npm run security:audit && npm outdated",
    "security:update": "npm update && npm run security:audit",
    "security:scan": "node scripts/security-check.js",
    "security:scan:ci": "npm run security:scan && npm run security:audit:strict",
    "security:licenses": "npx license-checker --onlyAllow=\"MIT;Apache-2.0;BSD-2-Clause;BSD-3-Clause;ISC;LGPL-3.0-or-later\" --summary",
    "security:secrets": "grep -r -E \"(password|secret|key|token)\\s*[:=]\\s*['\\\"][^'\\\"]{8,}\" src/ --exclude-dir=node_modules || echo 'No hardcoded secrets found'",
    "security:dependencies": "npm run security:audit:strict && npm run security:licenses",
    "security:full": "npm run security:scan && npm run security:dependencies && npm run security:secrets",
    "security:semgrep": "semgrep --config=auto src/",
    "security:semgrep:ci": "semgrep ci --config=auto",
    "security:setup": "echo 'Please set SEMGREP_APP_TOKEN in your environment variables'",
    "env:check": "node -e \"if(!process.env.NEXT_PUBLIC_FIREBASE_API_KEY) console.warn('Warning: NEXT_PUBLIC_FIREBASE_API_KEY not set');\"",
    "env:validate": "node scripts/validate-env.js",
    "docs:generate": "tsx scripts/generate-docs.ts --verbose",
    "docs:generate:quiet": "tsx scripts/generate-docs.ts",
    "docs:clean": "rm -rf docs/generated/*",
    "docs:validate": "tsx scripts/validate-docs.ts",
    "docs:validate:ci": "tsx scripts/validate-docs.ts --strict",
    "docs:check": "npm run docs:validate && echo 'All documentation is valid!'",
    "docs:full": "npm run docs:generate && npm run docs:validate",
    "docs:completeness": "tsx scripts/validate-documentation-completeness.ts",
    "docs:validate:all": "npm run docs:validate && npm run docs:completeness",
    "docs:index": "echo 'Validating documentation index and navigation structure...' && npm run docs:validate:all"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@heroui/react": "^2.8.1",
    "@heroui/theme": "^2.4.19",
    "@mui/icons-material": "^7.2.0",
    "@mui/material": "^7.2.0",
    "axios": "^1.9.0",
    "clsx": "^2.1.1",
    "dompurify": "^3.2.6",
    "dotenv": "^17.2.0",
    "firebase": "^11.10.0",
    "framer-motion": "^12.23.3",
    "lucide-react": "^0.525.0",
    "next": "^15.3.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "storybook": "^8.6.14",
    "validator": "^13.15.15",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.6",
    "@figma/plugin-typings": "^1.113.0",
    "@storybook/addon-a11y": "^8.6.14",
    "@storybook/addon-docs": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/addon-onboarding": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/nextjs": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@storybook/theming": "^8.6.14",
    "@svgr/webpack": "^8.1.0",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^24.0.13",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/validator": "^13.15.2",
    "autoprefixer": "^10.4.21",
    "eslint": "8.57.1",
    "eslint-config-next": "^15.3.5",
    "glob": "^10.3.10",
    "playwright": "^1.54.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.7.0",
    "typescript": "^5.1.6"
  }
}
